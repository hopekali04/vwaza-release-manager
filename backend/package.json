{
  "name": "@vwaza/backend",
  "version": "1.0.0",
  "description": "Vwaza Release Manager Backend API",
  "main": "dist/infrastructure/http/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/infrastructure/http/server.ts",
    "build": "tsc",
    "start": "node dist/infrastructure/http/server.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "fastify",
    "release-manager",
    "music"
  ],
  "author": "Hope Kalitera",
  "license": "MIT",
  "dependencies": {
    "fastify": "^4.25.2",
    "@fastify/cors": "^8.5.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^7.2.4",
    "@fastify/multipart": "^8.1.0",
    "pg": "^8.11.3",
    "dotenv": "^16.3.1",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.1",
    "@vitest/coverage-v8": "^1.1.1"
  }
